/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      // Environments
      "@environment": ["src/environments/environment"],

      // Auth
      "@auth/data-access/models": ["src/app/auth/data-access/models/index.ts"],
      "@auth/data-access/services": ["src/app/auth/data-access/services/index.ts"],
      "@auth/data-access/store": ["src/app/auth/data-access/store/index.ts"],
      "@auth/data-access/store/*": ["src/app/auth/data-access/store/*"],
      "@auth/feature/login": ["src/app/auth/feature/login/index.ts"],
      "@auth/feature/register": ["src/app/auth/feature/register/index.ts"],
      "@auth/ui/login-form": ["src/app/auth/ui/login-form/index.ts"],
      "@auth/ui/register-form": ["src/app/auth/ui/register-form/index.ts"],
      "@auth/utils": ["src/app/auth/utils/index.ts"],

      // Layout
      "@layout/feature": ["src/app/layout/feature/index.ts"],
      "@layout/ui/navbar": ["src/app/layout/ui/navbar/index.ts"],
      "@layout/ui/footer": ["src/app/layout/ui/footer/index.ts"],

      // Home
      "@home/data-access/models": ["src/app/home/data-access/models/index.ts"],
      "@home/data-access/store/tags": ["src/app/home/data-access/store/tags/index.ts"],
      "@home/data-access/store/tags/*": ["src/app/home/data-access/store/tags/*"],
      "@home/feature": ["src/app/home/feature/index.ts"],
      "@home/ui/feed-toggle": ["src/app/home/ui/feed-toggle/index.ts"],
      "@home/ui/tags": ["src/app/home/ui/tags/index.ts"],

      // Article
      "@article/data-access/models": ["src/app/article/data-access/models/index.ts"],
      "@article/data-access/store": ["src/app/article/data-access/store/index.ts"],
      "@article/data-access/store/*": ["src/app/article/data-access/store/*"],
      "@article/feature": ["src/app/article/feature/index.ts"],

      // Editor
      "@editor/data-access/models": ["src/app/editor/data-access/models/index.ts"],
      "@editor/data-access/store/new-article": [
        "src/app/editor/data-access/store/new-article/index.ts"
      ],
      "@editor/data-access/store/new-article/*": ["src/app/editor/data-access/store/new-article/*"],
      "@editor/feature/new-article": ["src/app/editor/feature/new-article/index.ts"],
      "@editor/ui/article-form": ["src/app/editor/ui/article-form/index.ts"],

      // Shared
      "@shared/data-access/models": ["src/app/shared/data-access/models/index.ts"],
      "@shared/data-access/services/jwt": ["src/app/shared/data-access/services/jwt/index.ts"],
      "@shared/data-access/services/article": [
        "src/app/shared/data-access/services/article/index.ts"
      ],
      "@shared/data-access/services/tag": ["src/app/shared/data-access/services/tag/index.ts"],
      "@shared/data-access/store/articles": ["src/app/shared/data-access/store/articles/index.ts"],
      "@shared/data-access/store/articles/*": ["src/app/shared/data-access/store/articles/*"],
      "@shared/ui/backend-errors": ["src/app/shared/ui/backend-errors/index.ts"],
      "@shared/ui/password-input-toggle": ["src/app/shared/ui/password-input-toggle/index.ts"],
      "@shared/ui/icon-button": ["src/app/shared/ui/icon-button/index.ts"],
      "@shared/ui/validation-defaults": ["src/app/shared/ui/validation-defaults/index.ts"],
      "@shared/ui/article-list": ["src/app/shared/ui/article-list/index.ts"],
      "@shared/ui/article-preview": ["src/app/shared/ui/article-preview/index.ts"],
      "@shared/ui/article-meta": ["src/app/shared/ui/article-meta/index.ts"],
      "@shared/ui/loading-spinner": ["src/app/shared/ui/loading-spinner/index.ts"],
      "@shared/ui/error": ["src/app/shared/ui/error/index.ts"],
      "@shared/ui/pagination": ["src/app/shared/ui/pagination/index.ts"],
      "@shared/ui/tag-list": ["src/app/shared/ui/tag-list/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["cypress.config.ts"]
}
