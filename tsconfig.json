/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@environment": ["src/environments/environment"],
      "@layout/feature": ["src/app/layout/feature/index.ts"],
      "@layout/ui/navbar": ["src/app/layout/ui/navbar/index.ts"],
      "@auth/data-access/models": ["src/app/auth/data-access/models/index.ts"],
      "@auth/data-access/guards": ["src/app/auth/data-access/guards/index.ts"],
      "@auth/data-access/interceptors": ["src/app/auth/data-access/interceptors/index.ts"],
      "@auth/data-access/state": ["src/app/auth/data-access/state/index.ts"],
      "@auth/feature/login": ["src/app/auth/feature/login/index.ts"],
      "@auth/feature/register": ["src/app/auth/feature/register/index.ts"],
      "@auth/ui/login-form": ["src/app/auth/ui/login-form/index.ts"],
      "@auth/ui/register-form": ["src/app/auth/ui/register-form/index.ts"],
      "@home/data-access/state/tags": ["src/app/home/data-access/state/tags/index.ts"],
      "@home/feature": ["src/app/home/feature/index.ts"],
      "@home/ui/feed-tabs": ["src/app/home/ui/feed-tabs/index.ts"],
      "@home/ui/tags": ["src/app/home/ui/tags/index.ts"],
      "@articles/data-access/resolvers": ["src/app/articles/data-access/resolvers/index.ts"],
      "@articles/data-access/state/article-list": [
        "src/app/articles/data-access/state/article-list/index.ts"
      ],
      "@articles/data-access/state/article": [
        "src/app/articles/data-access/state/article/index.ts"
      ],
      "@articles/data-access/state/article-edit": [
        "src/app/articles/data-access/state/article-edit/index.ts"
      ],
      "@articles/data-access/state/article-new": [
        "src/app/articles/data-access/state/article-new/index.ts"
      ],
      "@articles/feature/article-list": ["src/app/articles/feature/article-list/index.ts"],
      "@articles/feature/article": ["src/app/articles/feature/article/index.ts"],
      "@articles/feature/article-edit": ["src/app/articles/feature/article-edit/index.ts"],
      "@articles/feature/article-new": ["src/app/articles/feature/article-new/index.ts"],
      "@articles/ui/article-meta": ["src/app/articles/ui/article-meta/index.ts"],
      "@articles/ui/article-form": ["src/app/articles/ui/article-form/index.ts"],
      "@settings/data-access/state": ["src/app/settings/data-access/state/index.ts"],
      "@settings/feature": ["src/app/settings/feature/index.ts"],
      "@settings/ui/settings-form": ["src/app/settings/ui/settings-form/index.ts"],
      "@profile/data-access/resolvers": ["src/app/profile/data-access/resolvers/index.ts"],
      "@profile/data-access/state": ["src/app/profile/data-access/state/index.ts"],
      "@profile/feature": ["src/app/profile/feature/index.ts"],
